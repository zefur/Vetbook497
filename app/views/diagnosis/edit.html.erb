<div class="health_record-background d-flex justify-content-center">

  <div class="health_record-form-container">
    <h4>Edit a health record</h4>

    <div class="form-inputs-health_record d-flex">
      <%= simple_form_for([@owner, @pet, @diagnosis])  do |f| %>

          <%= f.input :type, collection: %w[Diagnosis Vaccination], input_html: {data: {reflex: "change->ExampleReflex#change_record"}}, disabled: true %>
          <%= f.input :pet, input_html: {value: @pet.name}, disabled: true %>
          <%= f.input :pet_id, :as => :hidden, :input_html => { :value => @pet.id }%>
          <%= f.input :diagnosis_date %>
          <%= f.input :diagnosis%>
          <%= f.input :treatment%>
          <%= f.input :document, as: :file, label: "Please up load documents"  %>
          <div class="health_record-buttons d-flex justify-content-between">
            <%= f.submit "Add record", disable_with: 'Submiting...',:class => 'submit_record'  %>
            <%= link_to "Back", owner_pet_path(@owner,@pet), class: "btn_back"%>
          </div>

      <% end %>

    </div>
  </div>
</div>
