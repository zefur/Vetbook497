<body>
<%= render "shared/navbar" %>
<div class="row mt-4">
  <div class="col-3 mt-4">

      <div class="row d-flex justify-content-center align-items-center">
        <!-- <%= @user.photo %> -->
        <%= image_tag "profile5.jpg", :class => 'avatar-profile' %>
      </div>


      <div class="row d-flex justify-content-center align-items-center">
       <h3><%= @user.first_name%> <%= @user.last_name %></h3>
      </div>

      <div class="row d-flex justify-content-center align-items-center">
        <p><%= @user.location %></p>
      </div>

      <div class="row d-flex justify-content-center align-items-center">
        <p><%= @user.phone_number %></p>
      </div>

      <div class="row d-flex justify-content-center align-items-center">
        <p><%= @user.email %></p>
      </div>

      <div class="row d-flex justify-content-center align-items-center newpet mb-2">
        <%= link_to "➕ Add new pet", new_user_pet_path(@user) %>
      </div>

      <div class="row d-flex justify-content-center align-items-center newpet mb-2">
        <%= link_to "🔙 Return to Dashboard", users_dash_path(@user) %>
      </div>

      <div class="row d-flex justify-content-center align-items-center newpet mb-2">
         <%= link_to "✏️ Edit profile", "#" %>
      </div>

  </div>


  <div class="col-9">
    <div class="container" >
        <% 2.times do %>
        <div class="one-pet-card">

         <div class="col d-flex justify-content-start align-items-center">
            <%= image_tag(('chihuahua.jpg'), :class =>"avatar-square") %>
         </div>

          <div class="col card-pet-infos">
           <div class="d-flex row justify-content-starts align-items-left mt-2">
              <p class="pet-text">Name:</p>
            </div>

            <div class="d-flex row justify-content-start align-items-left">
              <p class="pet-text">Age:</p>
            </div>

            <div class=" d-flex row justify-content-start align-items-left">
              <p class="pet-text">Breed:</p>
            </div>

            <div class="wrapper" style="text-align: center;">
             <%= link_to "View full pet records",user_pet_path(@user), class: "btn button-view-record"  %>
            </div>
         </div>
      </div>
        <%end%>

        </div>
    </div>


  </div>


</body>



