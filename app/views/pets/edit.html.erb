<div class="editpet-background d-flex justify-content-center">
  <div class="editpet-form-container">
    <h4>Edit pet basic info</h4>
        <div class="form-inputs-editpet d-flex">
        <%= simple_form_for [@owner, @pet] do |f| %>
          <%= f.input :name %>
            <%= f.input :dob %>
            <%= f.input :species %>
            <%= f.input :breed %>
            <%= f.input :gender, collection: Pet.genders.keys %>
            <%= f.label :notes, 'Describe behavior during vet visits' %>
            <%= f.input :notes, as: :text, label: false ,:placeholder => 'nervous, calm, growling, snapping, or biting', input_html: { class: "pet-form-bar-width", maxlength: 50} %>
            <%= f.input :photo, as: :file, label: "Upload a photo" %>
            <%= link_to "❌ Delete photo", delete_photo_owner_pet_path(@owner, @pet), method: :delete, data: { confirm: 'Are you sure?' }, class: "delete_photo" %>
        </div>
        <div class="editpet-buttons d-flex justify-content-around">
          <%= f.submit "Edit Pet", :class => 'submit_class' %>
          <%= link_to "Back",owners_dash_path(current_user), class: "btn_back"  %>
        </div>
     </div>
  <% end %>

</div>
